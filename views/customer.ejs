<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Dashboard</title>
    <style>
        /* Basic styling for the page */
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 20px;
        }

        h1, h2 {
            color: #2e7d32;
        }

        ul {
            list-style-type: none;
            padding: 0;
        }

        ul li {
            background-color: white;
            border-radius: 8px;
            margin-bottom: 15px;
            padding: 15px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        h3 {
            margin: 0 0 10px 0;
            color: #2e7d32;
        }

        p {
            margin: 5px 0;
        }

        form {
            margin-top: 10px;
        }

        input[type="number"], input[type="radio"] {
            padding: 5px;
            font-size: 1em;
        }

        button {
            background-color: #2e7d32;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        button:hover {
            background-color: #1b5e20;
        }

        .cart-section {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .delete-button {
            background-color: red;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .delete-button:hover {
            background-color: darkred;
        }

        .checkout-section {
            background-color: white;
            padding: 20px;
            margin-top: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .profile-button {
            background-color: #2e7d32;
            color: white;
            padding: 10px 20px;
            margin-top: 20px;
            text-decoration: none;
            border-radius: 5px;
            display: inline-block;
        }

        .profile-button:hover {
            background-color: #1b5e20;
        }

        .subscription-button {
            background-color: #ff9800;
            color: white;
            padding: 10px 20px;
            margin-top: 20px;
            text-decoration: none;
            border-radius: 5px;
            display: inline-block;
        }

        .subscription-button:hover {
            background-color: #e65100;
        }

        .subscription-section {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            margin-top: 20px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .subscription-plan {
            background-color: #fff3e0;
            padding: 15px;
            margin: 10px 0;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        .total-price {
            font-size: 1.2em;
            font-weight: bold;
            color: #2e7d32;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <h1>Welcome, <%= user.name %>!</h1>
    <% if (user.subscription === 'pro') { %>
        <h2>You are a Pro User!</h2>
    <% } else if (user.subscription === 'pro plus') { %>
        <h2>You are a Pro Plus User!</h2>
    <% } %>

    <h1>Available Products</h1>
    <ul>
        <% items.forEach(item => { %>
            <li>
                <h3><%= item.name %></h3>
                <p>Price: ₹<%= item.averagePrice %></p>
                <form action="/customer/add-to-cart" method="POST">
                    <input type="hidden" name="itemId" value="<%= item._id %>">
                    <input type="number" name="quantity" min="1" value="1" required>
                    <button type="submit">Add to Cart</button>
                </form>
            </li>
        <% }); %>
    </ul>

    <h1>Your Cart</h1>
    <div class="cart-section">
        <ul>
            <% if (user.cart.length > 0) { %>
                <% user.cart.forEach(cartItem => { %>
                    <li>
                        <% if (cartItem.item) { %>
                            <h3><%= cartItem.item.name %></h3>
                            <p>Quantity: <%= cartItem.quantity %></p>
                            <p>Price: ₹<%= (cartItem.item.pricePerKg * cartItem.quantity).toFixed(2) %></p>
                            <form action="/customer/delete-from-cart" method="POST">
                                <input type="hidden" name="itemId" value="<%= cartItem.item._id %>">
                                <button type="submit" class="delete-button">Delete</button>
                            </form>
                        <% } else { %>
                            <p>Item not found.</p>
                        <% } %>
                    </li>
                <% }); %>
            <% } else { %>
                <p>Your cart is empty.</p>
            <% } %>
        </ul>
        <div class="total-price">
            Total Price: ₹<span id="total-price"><%= user.cart.reduce((total, cartItem) => total + (cartItem.item.pricePerKg * cartItem.quantity), 0).toFixed(2) %></span>
        </div>
    </div>


    <% if (user.subscription !== 'pro plus') { %>
    <div class="subscription-section">
        <h2>Unlock Pro Features</h2>
        <p>Get your orders delivered faster with our subscription plans!</p>

        <% if (user.subscription === 'normal') { %>
            <div class="subscription-plan">
                <h3>Pro Plan - ₹599/year</h3>
                <form action="/customer/subscribe" method="POST">
                    <input type="hidden" name="plan" value="pro">
                    <button class="subscription-button" type="submit">Subscribe to Pro</button>
                </form>
            </div>
        <% } %>

        <div class="subscription-plan">
            <h3>Pro Plus Plan - ₹899/year</h3>
            <form action="/customer/subscribe" method="POST">
                <input type="hidden" name="plan" value="pro plus">
                <button class="subscription-button" type="submit">Subscribe to Pro Plus</button>
            </form>
        </div>
    </div>
    <% } %>

    <!-- Checkout section -->
    <h2>Checkout</h2>
    <form action="/customer/checkout" method="POST">
        <label>
            <input type="radio" name="paymentMethod" value="COD" checked> Cash on Delivery
        </label>
        <label>
            <input type="radio" name="paymentMethod" value="stripe"> Stripe
        </label>
        <button type="submit">Checkout</button>
    </form>

    <!-- Profile update button -->
    <a href="/customer/update-profile" class="profile-button">Update Profile</a>

    <!-- Logout button -->
    <form action="/customer/logout" method="POST">
        <button type="submit" class="profile-button">Logout</button>
    </form>

</body>
</html>
